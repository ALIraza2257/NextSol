@model IEnumerable<NextSol.VM.OrderRaw>
@{
    ViewData["Title"] = "Index";
}
<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="row">
        <div class="col-md-12">
            <a asp-controller="Order" asp-action="Order" class="btn btn-primary fa-pull-right " style="margin-left:30px"><i class="fa fa-plus-circle"></i>&nbsp; Create New</a>
        </div>
    </div>
    <br />
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fa fa-table"></i> Order Table</h5>
                <hr>
            </div>
            <div class="card-body ">
                <div class="dt-responsive table-responsive">
                    <table id="basic-btn" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Customer </th>
                                <th>Shiping Address </th>
                                <th>Order Date</th>
                                <th>Required Date</th>
                                <th>Net Total</th>
                                <th>Discount</th>
                                <th>Grand Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            
                            @foreach (var lst in Model)
                            {
                            <tr>
                                <td>
                                    @lst.OrderId
                                </td>
                                <td>@lst.Name</td>
                                <td>@lst.ShipingAddress</td>
                                <td>@Convert.ToDateTime(lst.OrderDate).ToString("dd-MMM-yyyy")</td>
                                <td>@Convert.ToDateTime(lst.RequiredDate).ToString("dd-MMM-yyyy")</td>
                                <td>@lst.NeTotal.ToString("#,##0")</td>
                                <td>@lst.Discount.ToString("#,##0")</td>
                                <td>@lst.Gtotal.ToString("#,##0")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-OrderId="@lst.OrderId" new { onclick="return confirm('Are you sure you want to Edit this Order?');" class="btn btn-success">Edit</a>
                                </td>
                            </tr>
                               
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




