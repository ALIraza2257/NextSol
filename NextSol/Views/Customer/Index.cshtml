@model IEnumerable<NextSol.Models.Customer>
@{
    ViewData["Title"] = "Index";
}
<div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="row" >
            <div class="col-md-12">
                <a asp-controller="Customer" asp-action="Customer" class="btn btn-primary fa-pull-right " style="margin-left:30px"><i class="fa fa-plus-circle"></i>&nbsp; Create New</a>
            </div>
        </div>
        <br />
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fa fa-table"></i> Customer Table</h5>
                    <hr>
                </div>
                <div class="card-body ">
                    <div class="dt-responsive table-responsive">
                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Sr#</th>
                                    <th>Customer Name</th>
                                    <th>Compant Name</th>
                                    <th>Contact Name</th>
                                    <th>Phone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                @{int Sr = 1;}
                                @foreach (var lst in Model)
                                {
                                <tr>
                                    <td>
                                        @Sr
                                    </td>
                                    <td>@lst.Name</td>
                                    <td>@lst.CompanyName</td>
                                    <td>@lst.ContactName</td>
                                    <td>@lst.Phone</td>
                                    <td>
                                        <a asp-action="Customer" asp-route-id="@lst.Id" new { onclick="return confirm('Are you sure you want to Edit this Customer?');" class="badge badge-success">Edit</a>
                                        <a asp-action="OrderDetail" asp-route-id="@lst.Id"  class="badge badge-warning">Show All Order</a>
                                    </td>
                                </tr>
                                    Sr++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>




